@model QL_ToChucSuKien_TTSKCĐVHTKNTBD_Master.ViewModels.LoginViewModel;
@{
    ViewData["Title"] = "Đăng nhập";
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Favicons -->
    <link href="~/uploads/Logo.jpg" rel="icon">
    <link href="~/uploads/Logo.jpg" rel="apple-touch-icon">
    <!-- Vendor CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">


</head>
<body>
    <section class="vh-100 overflow-hidden" style="background-color: #ccc;">
        <div class="container py-4 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col col-xl-10">
                    <div class="card" style="border-radius: 1rem;">
                        <div class="row g-0">
                            <div class="col-md-6 col-lg-5 d-none d-md-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img2.webp"
                                     alt="login form" class="img-fluid" style="border-radius: 1rem 0 0 1rem;" />
                            </div>
                            <div class="col-md-6 col-lg-7 d-flex align-items-center">
                                <div class="card-body p-4 p-lg-5 text-black">
                                    <form asp-action="Login" method="post">
                                        <div class="d-flex align-items-center mb-3 pb-1">
                                            <i class="fas fa-cubes fa-2x me-3" style="color: #ff6219;"></i>
                                            <img src="~/uploads/Logo.jpg" />
                                        </div>

                                        <h2 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Đăng nhập</h2>

                                        <div data-mdb-input-init class="form-outline form-group mb-4">
                                            <label class="form-label" for="form2Example17">Email</label>
                                            <input asp-for="Email" id="form2Example17" class="form-control form-control-lg" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>

                                        <div data-mdb-input-init class="form-outline form-group mb-4">
                                            <label class="form-label" for="form2Example27">Mật khẩu</label>
                                            <input asp-for="Password" id="form2Example27" class="form-control form-control-lg" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>

                                        <div class="pt-1 mb-4">
                                            <button data-mdb-button-init data-mdb-ripple-init class="btn btn-dark btn-lg btn-block" type="submit">Đăng nhập</button>                                         
                                        </div>

                                        <a class="small text-muted" href="#!">Quên mật khẩu</a>
                                        <p class="mb-5 pb-lg-2" style="color: #393f81;">
                                            Bạn chưa có tài khoản <a href="@Url.Action("Register", "Account")"
                                                                      style="color: #393f81;">Đăng ký tại đây</a>
                                        </p>
                                        <partial name="_ValidationScriptsPartial" />
                                    </form>
                                   
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
