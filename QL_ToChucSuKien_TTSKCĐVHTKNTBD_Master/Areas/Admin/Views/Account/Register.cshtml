@model QL_ToChucSuKien_TTSKCĐVHTKNTBD_Master.ViewModels.RegisterViewModel;
@{
    ViewData["Title"] = "Đăng ký";
    Layout = null;
}
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <!-- Favicons -->
    <link href="~/uploads/Logo.jpg" rel="icon">
    <link href="~/uploads/Logo.jpg" rel="apple-touch-icon">
    <!-- Vendor CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
</head>
<body>
    <section class="h-100 bg-dark">
        <div class="container py-5 h-100">
            <div class="row d-flex justify-content-center align-items-center h-100">
                <div class="col">
                    <div class="card card-registration my-4">
                        <div class="row g-0">
                            <div class="col-xl-6 d-none d-xl-block">
                                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/img2.webp"
                                     alt="Sample photo" class="img-fluid"
                                     style="border-top-left-radius: .25rem; border-bottom-left-radius: .25rem;" />
                            </div>
                            <div class="col-xl-6">
                                <div class="card-body p-md-5 text-black">
                                    <form asp-action="Register" method="post">
                                    <h3 class="mb-5 text-uppercase">Đăng ký</h3>  
                                    <div class="row">
                                        <div class="col-md-6 mb-4">
                                            <div data-mdb-input-init class="form-outline">
                                                <label class="form-label" for="form3Example1m">Họ và tên</label>
                                                <input type="text" asp-for="Username" id="form3Example1m" class="form-control form-control-lg" />
                                                <span asp-validation-for="Username" class="text-danger"></span>
                                            </div>
                                        </div>                                 
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" for="form3Example1">Email</label>
                                        <input type="email" asp-for="Email" id="form3Example1" class="form-control form-control-lg" />
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" for="form3Example2">Mật khẩu</label>
                                        <input type="password" asp-for="Password" id="form3Example2" class="form-control form-control-lg" />
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                         <label class="form-label" for="form3Example3">Nhập lại mật khẩu</label>
                                         <input type="password" asp-for="ConfirmPassword" id="form3Example3" class="form-control form-control-lg" />
                                         <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                    </div>
                                    <div data-mdb-input-init class="form-outline mb-4">
                                        <label class="form-label" for="form3Example4">Địa chỉ</label>
                                        <input type="text" asp-for="Address" id="form3Example4" class="form-control form-control-lg" />
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>
                                    <div class="d-flex justify-content-end pt-3">
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-light btn-lg">Xóa tất cả</button>
                                        <button type="submit" data-mdb-button-init data-mdb-ripple-init class="btn btn-warning btn-lg ms-2">Đăng ký</button>
                                    </div>
                                    <partial name="_ValidationScriptsPartial" />
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</body>
</html>
