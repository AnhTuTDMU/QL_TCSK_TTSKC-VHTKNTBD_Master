@model PaginatedList<EventRegistrationModel>
@{
    ViewData["Title"] = "Danh sách đăng ký tham gia sự kiện: " + ViewBag.EventName;
    Layout = "~/Areas/Admin/Shared/_LayoutAdmin.cshtml";
}

<h4 style="color: blue;">@ViewData["Title"]</h4>

<a asp-action="ExportParticipants" asp-route-eventId="@ViewBag.EventId" class="btn btn-primary" style="float: right; margin: 10px">Xuất danh sách</a>

<table class="table table-striped">
    <thead class="thead-dark">
        <tr>
            <th scope="col">Tên khách hàng</th>
            <th scope="col">Email</th>
            <th scope="col">Số điện thoại</th>
            <th scope="col">Ngày đăng ký</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var registration in Model)
        {
            <tr>
                <td>@registration.Customers.CustomerName</td>
                <td>@registration.Customers.CustomerEmail</td>
                <td>@registration.Customers.CustomerPhone</td>
                <td>@registration.RegistrationDate.ToString("dd/MM/yyyy : HH:ss")</td>
            </tr>
        }
    </tbody>
</table>
@if (Model.HasPreviousPage || Model.HasNextPage)
{
    <nav aria-label="Page navigation">
        <ul class="pagination" style="float: right">
            @if (Model.HasPreviousPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="RegistrationList" asp-route-eventId="@ViewBag.EventId" asp-route-pageNumber="Model.PageIndex - 1" tabindex="-1">Quay lại</a>
                </li>
            }
            @for (int i = 1; i <= Model.TotalPages; i++)
            {
                <li class="page-item @(i == Model.PageIndex ? "active" : "")">
                    <a class="page-link" asp-action="RegistrationList" asp-route-eventId="@ViewBag.EventId" asp-route-pageNumber="@i">@i</a>
                </li>
            }
            @if (Model.HasNextPage)
            {
                <li class="page-item">
                    <a class="page-link" asp-action="RegistrationList" asp-route-eventId="@ViewBag.EventId" asp-route-pageNumber="Model.PageIndex + 1">Tiếp túc</a>
                </li>
            }
        </ul>
    </nav>
}
