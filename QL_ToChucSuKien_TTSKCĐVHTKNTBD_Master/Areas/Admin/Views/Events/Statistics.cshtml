@using X.PagedList
@using X.PagedList.Mvc.Core
@model QL_ToChucSuKien_TTSKCĐVHTKNTBD_Master.ViewModels.EventStatisticsViewModel

@{
    Layout = "~/Areas/Admin/Shared/_LayoutAdmin.cshtml";
}

<h2>Thống kê sự kiện</h2>

<form method="get" action="@Url.Action("Statistics", "Events")" id="filterForm">
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label for="StartDate">Từ ngày:</label>
                <input type="date" class="form-control" id="StartDate" name="StartDate" value="@Model.StartDate?.ToString("yyyy-MM-dd")" onchange="submitForm()">
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label for="EndDate">Đến ngày:</label>
                <input type="date" class="form-control" id="EndDate" name="EndDate" value="@Model.EndDate?.ToString("yyyy-MM-dd")" onchange="submitForm()">
            </div>
        </div>
        <div class="col-md-4 d-flex justify-content-center">
            <div class="form-group">
                <a href="@Url.Action("ExportToExcel", "Events", new { startDate = Model.StartDate, endDate = Model.EndDate })" class="btn btn-success">
                    <i class="fas fa-file-excel"></i> Xuất Excel
                </a>
                <a href="@Url.Action("GenerateReport", "Events", new { startDate = Model.StartDate, endDate = Model.EndDate })" class="btn btn-danger">
                    <i class="fas fa-file-pdf"></i> Tạo Báo Cáo PDF
                </a>
            </div>
        </div>
        <div class="col-md-4">
            <div class="form-group">
                <label>Số lượng sự kiện:</label>
                <span class="badge badge-primary">@Model.EventDetails.TotalItemCount</span>
            </div>
        </div>
    </div>
</form>
<table class="table table-striped table-bordered" id="eventDetailsBody">
    <thead class="thead-dark">
        <tr>
            <th>Tên sự kiện</th>
            <th>Ngày bắt đầu</th>
            <th>Ngày kết thúc</th>
            <th>Địa điểm</th>
            <th>Mô tả</th>
            <th>Số người tham gia</th>
        </tr>
    </thead>
    <tbody id="eventDetailsBody">
        @Html.Partial("_EventDetailsPartial", Model.EventDetails)
    </tbody>
</table>

<div id="loading" style="display: none;">
    Đang tải thêm dữ liệu...
</div>
<style>
    #eventDetailsBody {
        max-height: 400px;
        overflow-y: auto;
    }

</style>
@section Scripts {
    <script>
        window.addEventListener('resize', function () {
            var tableBody = document.getElementById('eventDetailsBody');
            // Tính toán lại chiều cao tối đa nếu cần
            tableBody.style.maxHeight = (window.innerHeight - 200) + 'px'; // Ví dụ tính lại chiều cao tối đa
        });
        function submitForm() {
            document.getElementById('filterForm').submit();
        }
     
            let page = 2; // Chỉ khai báo nếu chưa tồn tại

        $(window).scroll(function () {
            // Kiểm tra xem người dùng đã cuộn xuống cuối trang chưa
            if ($(window).scrollTop() + $(window).height() >= $(document).height()) {
                // Đang cuộn xuống cuối trang, gọi hàm AJAX để tải thêm dữ liệu
                loadMore();
            }
        });

        function loadMore() {
            document.getElementById('loading').style.display = 'block';

            const url = `@Url.Action("Statistics", "Events")?page=${page}&startDate=@Model.StartDate&endDate=@Model.EndDate&isLoadMore=true`;

            $.get(url, function (data) {
                $('#eventDetailsBody').append(data);
                document.getElementById('loading').style.display = 'none';
                page++;
            });
        }

    </script>
}
