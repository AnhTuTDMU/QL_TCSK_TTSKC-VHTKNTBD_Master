<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - QL_ToChucSuKien_TTSKCĐVHTKNTBD_Master</title>


    <!-- Favicons -->
    <link href="~/uploads/Logo.jpg" rel="icon">
    <link href="~/uploads/Logo.jpg" rel="apple-touch-icon">

    <!-- Fonts -->
    <link href="https://fonts.googleapis.com" rel="preconnect">
    <link href="https://fonts.gstatic.com" rel="preconnect" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Roboto:ital,wght@0,100;0,300;0,400;0,500;0,700;0,900;1,100;1,300;1,400;1,500;1,700;1,900&family=Raleway:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">

    <!-- Vendor JS Files -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.bundle.min.js"></script>
    <script src="./lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="./lib/bootstrap/dist/"></script>
    <script src="./js/index.js"></script>

    <link rel="stylesheet" href="~/css/index.css" />
</head>
<body class="d-flex flex-column h-100">
    <header id="header" class="header d-flex align-items-center fixed-top">
        <div class="container-fluid container-xl position-relative d-flex align-items-center">

            <a href="@Url.Action("Index","Home")" class="logo d-flex align-items-center me-auto">
                <img src="~/uploads/Logo.jpg" alt="">
                <h6 style="color:  #2f3138;">Trung tâm sáng kiến cộng đồng và hỗ trợ khởi nghiệp Bình Dương</h6>
            </a>

            <nav id="navmenu" class="navmenu">
                <ul>
                    <li><a href="#hero" class="active">Trang chủ<br></a></li>
                    <li class="dropdown">
                        <a href="#"><span>Sự kiện</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                        <ul>
                            <li><a href="#">Tất cả sự kiện </a></li>
                            <li class="dropdown">
                                <a href="#"><span>Sự kiện sắp diễn ra</span> <i class="bi bi-chevron-down toggle-dropdown"></i></a>
                                <ul>
                                    <li><a href="#">Sự kiện ngoài trời</a></li>
                                    <li><a href="#">Sự kiện trong nhà</a></li>

                                </ul>
                            </li>
                            <li><a href="#">Sự kiện đã kết thúc</a></li>
                        </ul>
                    </li>
                    <li><a href="#" class="">Dịch vụ<br></a></li>
                    <li><a href="#" class="">Ưu đãi<br></a></li>
                    <li><a href="#contact">Về chúng tôi</a></li>
                    <partial name="_LoginPartial" />

                </ul>
                <i class="mobile-nav-toggle d-xl-none bi bi-list"></i>
            </nav>

        </div>
    </header>
    <div>
        @RenderBody()
    </div>
    <footer class="footer fixed-bottom bg-light">
        <div class="container text-center">
            <span class="text-muted">©Quản lý tổ chức sự kiện TTP 2024</span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
 

    @await RenderSectionAsync("Scripts", required: false)
    
</body>
</html>
